function u_baptized = baptize( omega, x_start, xgrid, delta_x)

%omega=.1 and mu = 1 work
%omega=.25 and

    u_steady = findSteadySolution(1,0,omega,delta_x, xgrid);       %newton to find steady state solution for the ground state
    plot(xgrid,u_pdf(u_steady));
    x_start_vector=repmat(x_start,1,length(xgrid));
    u_baptized = u_steady .* (tanh(xgrid - x_start_vector)).^2;

end

